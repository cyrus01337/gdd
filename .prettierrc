{
    "$schema": "https://json.schemastore.org/prettierrc",
    "arrowParens": "avoid",
    "importOrder": [
        "<BUILTIN_MODULES>",
        "",
        "<THIRD_PARTY_MODULES>",
        "",
        "^@/(.*)",
        "^~/(.*)",
        "^[\\.]*/(.*)",
        "",
        "<TYPES>"
    ],
    "importOrderParserPlugins": ["importAssertions"],
    "jsonRecursiveSort": true,
    "plugins": ["@ianvs/prettier-plugin-sort-imports", "prettier-plugin-sort-json"],
    "printWidth": 100,
    "tabWidth": 4
}
